<h1>New Game</h1>

<ul>
  <% @random_letters.each do |letter| %>
    <li><%= letter %></li>
  <% end %>
</ul>

<form action="/score" data-turbo="false">
<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
<%= hidden_field_tag :random_letters, @random_letters %>

  <input type="text" name="word">
  <input type="submit" value="Play">
</form>

<%= link_to "go to score", score_path %>
